{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Totals by service type (from CSV).",
  "width": 600,
  "height": 360,
  "data": { "url": "data/subsidy.csv" },
  "mark": { "type": "bar", "cornerRadiusTopLeft": 3, "cornerRadiusTopRight": 3 },
  "encoding": {
    "x": {"field": "Service type", "type": "nominal", "title": "Service type", "sort": "-y", "axis": {"labelAngle": -20}},
    "y": {"field": "subsidy", "type": "quantitative", "title": "Total subsidy ($ billions)"},
    "color": {"field": "Service type", "type": "nominal", "legend": null},
    "tooltip": [
      {"field": "Service type", "title": "Service type:"},
      {"field": "subsidy", "title": "Total subsidy ($ billion):", "format": ".2f"}
    ]
  }
}